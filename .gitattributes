*.sh text eol=lf
*.bat text eol=crlf

# Markdown files
*.md text eol=lf
*.markdown text eol=lf

# JSON files
*.json text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Configuration files
*.conf text eol=lf
*.config text eol=lf
.htaccess text eol=lf
*.sample text eol=lf

# Documentation
README* text eol=lf
CHANGELOG* text eol=lf
CONTRIBUTING* text eol=lf
INSTALL* text eol=lf
LICENSE* text eol=lf
NEWS* text eol=lf
TODO* text eol=lf

# WordPress specific files
*.pot text eol=lf
*.po text eol=lf
*.mo binary

# Declare files that will always have CRLF line endings on checkout
*.sln text eol=crlf

# Declare files that will always have LF line endings on checkout
makefile text eol=lf
Makefile text eol=lf

